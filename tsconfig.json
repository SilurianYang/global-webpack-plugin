{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
        "moduleResolution": "Node",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ES2015"],
		"outDir": "dist",
		"declaration": true,
		"declarationMap": false,
		"rootDir": "./src",
		"baseUrl": ".",
		"paths": {}
	},
	"include": ["./src/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}